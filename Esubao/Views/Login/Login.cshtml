    <style type="text/css">
        * {
            margin: 0px;
            padding: 0px;
        }

        .box {
            width: 100%;
            height: 100%;
            margin: 0px auto;
            position: relative;
        }

        .pic {
            width: 100%;
            height: 500px;
            overflow: hidden;
        }

            .pic ul li {
                list-style-type: none;
                width: 100%;
                height: 500px;
                position: relative;
                overflow: hidden;
            }

                .pic ul li .img1 {
                    position: absolute;
                    left: -760px;
                    top: 0px;
                }

        .nav-img {
            width: 100px;
            height: 14px;
            position: absolute;
            bottom: 10px;
            right: 20px;
        }

            .nav-img ul li {
                list-style-type: none;
                width: 12px;
                height: 12px;
                float: left;
                margin-right: 5px;
                cursor: pointer;
                border: 1px solid #fff;
            }

            .nav-img ul .bg {
                background: #ff7300;
                width: 14px;
                height: 14px;
                border: none;
            }
    </style>
    <script type="text/javascript">
        var i = -1;
        var time = 0;
        junmper();
        function junmper() {
            i++;
            if (i > 2)
                i = 0;
            $(".nav-img ul li").eq(i).addClass("bg").siblings().removeClass("bg");
            $(".pic ul li").eq(i).fadeIn(100).siblings().fadeOut(100);
            $(".pic ul li").eq(i).find(".img1").css({ left: "-760px" });
            $(".pic ul li").eq(i).find(".img2").css({ display: "none", left: "0px" });
            $(".pic ul li").eq(i).find(".img1").animate({ left: "0px" }, 500, function () {
                $(".pic ul li").eq(i).find(".img2").css("display", "block");
                $(".pic ul li").eq(i).find(".img2").animate({ left: "0px" }, 500);
            });

        }
        time = setInterval("junmper()", 1500);
        $(".nav-img ul li").click(function () {
            i = $(this).index();
            $(".nav-img ul li").eq(i).addClass("bg").siblings().removeClass("bg");
            $(".pic ul li").eq(i).fadeIn(100).siblings().fadeOut(100);
            $(".pic ul li").eq(i).find(".img1").css({ left: "-760px" });
            $(".pic ul li").eq(i).find(".img2").css({ display: "none", left: "-15px" });
            $(".pic ul li").eq(i).find(".img1").animate({ left: "0px" }, 500, function () {
                $(".pic ul li").eq(i).find(".img2").css("display", "block");
                $(".pic ul li").eq(i).find(".img2").animate({ left: "0px" }, 500);
            });

        })
        $(".nav-img ul li").hover(function () {
            clearInterval(time);
        }, function () {
            time = setInterval("junmper()", 3700);
        })
    </script>
</head>
